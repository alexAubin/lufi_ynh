#!/bin/bash

# Exit on command errors and treat unset variables as an error
set -eu

# Source app helpers
source /usr/share/yunohost/helpers

# Get multi-instances specific variables
app=$YNH_APP_INSTANCE_NAME

# Retrieve app settings
domain=$(ynh_app_setting_get "$app" domain)

# Copy the app files
final_path="/var/www/${app}"
ynh_backup "${final_path}" "sources" 1

# Copy the nginx conf files
ynh_backup "/etc/nginx/conf.d/${domain}.d/${app}.conf" "nginx.conf"

# Copy the lufi conf file
ynh_backup "${final_path}/${app}.conf" "${app}.conf"
ynh_backup "/etc/systemd/system/${app}.service" "systemd_${app}.service"
ynh_backup "/etc/cron.d/${app}" "cron_${app}"
ynh_backup "/etc/logrotate.d/${app}" "logrotate_${app}"
ynh_backup "/var/log/${app}/production.log" "production.log"